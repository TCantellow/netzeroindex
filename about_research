    <script>
        // Update the page theme based on local storage
        function updateMode() {
            const isDark = localStorage.getItem('theme') === 'dark';
            document.documentElement.classList.toggle("dark", isDark);
            document.body.style.backgroundColor = isDark ? "#333" : "#ffffff";
            document.body.style.color = isDark ? "#ffffff" : "#000000";
        }

        // Toggle theme and update local storage
        function toggleMode() {
            const newTheme = localStorage.getItem('theme') === 'dark' ? 'light' : 'dark';
            localStorage.setItem('theme', newTheme);
            updateMode();
        }

        window.onload = function() {
            if (!localStorage.getItem('theme')) {
                localStorage.setItem('theme', 'light');
            }
            updateMode();
        };
    </script>
    <style>
        body {
            max-width: 800px; /* Set a maximum width for the content */
            margin: 0 auto; /* Center the content */
            padding: 20px; /* Add padding */
            background-color: #ffffff; /* Light background */
            color: #000000; /* Dark text color */
            font-family: Arial, sans-serif; /* Set a basic font */
            transition: background-color 0.3s, color 0.3s; /* Smooth transition for theme change */
            text-align: justify; /* Justify text */
        }
        header {
            margin-bottom: 20px;
        }
        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        h1 {
            text-align: left; /* Left-align the title */
            font-size: 2em;
            margin-bottom: 10px;
        }
        .content {
            line-height: 1.6; /* Better readability */
        }
        footer {
            text-align: center;
            margin-top: 20px;
        }
        .toggle-button {
            background: none;
            border: none;
            cursor: pointer;
            font-size: 14px;
            color: #555;
        }
        /* Dark mode styles */
        .dark body {
            background-color: #333; /* Dark background */
            color: #ffffff; /* Light text color */
        }
    </style>
